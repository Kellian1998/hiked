{% extends 'baseother.html.twig' %}

{% block title %}Hiked - Trouvez la randonnée idéale{% endblock %}

{% block body %}
    <div class="mt-5 ml-5" style="color:white;">
        <h1>Trouvez la randonnée idéale !</h1>
        {% if state == 1 %}
        {% else %}
            {{ form(form) }}{% endif %}
            {% if state == 1 %}
                {% if randos == null %}
                <h2 class="mt-5">Désolé, aucune randonnée ne correspond à vos critères... <br><br><a href="{{ path('filter') }}" style="color:red;">REFAIRE UNE RECHERCHE</a></h2>
                {% else %}
                <div class="container-fluid">
                    <div class="row">
                        {% for rando in randos %}
                            <div class=="col-3 d-flex justify-content-center">
                                <a href="#">
                                    <div
                                        class="randobloc m-5 d-flex flex-column justify-content-center align-items-center"
                                        style='background-image:url({{asset('uploads/images/' ~ rando.photo ~ '')}})'>
                                        <h2>{{ rando.name }}</h2>
                                        <p class="d-flex align-items-center">
                                            <span class="material-icons">
                                                <span class="material-icons">
                                                    signal_cellular_alt
                                                </span>
                                            </span>&nbsp;{{ rando.difficulty }}
                                        </p>
                                        <p class="d-flex align-items-center">
                                            <span class="material-icons">
                                                <span class="material-icons">
                                                    landscape
                                                </span>
                                            </span>&nbsp;{{ rando.milieu }}
                                        </p>
                                        <p>
                                            <a href="#">Sauvegarder la randonnée</a>
                                        </p>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            {% else %}
            {% endif %}
        </div>
    {% endblock %}
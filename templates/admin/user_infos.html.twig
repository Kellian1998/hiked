{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <!-- Page Title Header Starts-->
            <div class="row page-title-header">
                <div class="col-12">
                    <div class="page-header" style="display:flex;align-items:center;">
                        {% if user.pdp != '' %}
                            <img
                                src="{{ user.pdp }}"
                                style="height:60px; width:60px; border-radius:100px; margin:0 auto;">
                        {% else %}
                            <span
                                class="img-sm rounded-circle text-white text-avatar"
                                style="background-color:#D63F27; height:60px; width:70px; margin:0 auto;">{{ user.nom|first|upper}}{{ user.prenom|first|upper }}</span>
                        {% endif %}
                        <h4 class="page-title">&nbsp;{{ user.nom }}&nbsp;{{ user.prenom }}</h4>
                        <div class="quick-link-wrapper w-100 d-md-flex flex-md-wrap"></div>
                    </div>
                </div>
            </div>
            <input
                type="button"
                value="Retour"
                class="btn btn-primary btn-fw"
                onclick="history.back()"><br><br>
            <div class="row">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body d-flex flex-column">
                            <div class="wrapper">
                                <h4 class="card-title mb-0">Informations de contact</h4>
                                <div class="mb-4" id="net-profit-legend"></div>
                            </div>
                            <div style="display:flex">
                                <span class="material-icons" style="color:#D63F27">
                                    phone
                                </span>&nbsp;
                                {{ user.tel }}</div>
                            <div style="display:flex">
                                <span class="material-icons" style="color:#D63F27">
                                    mail
                                </span>&nbsp;
                                {{ user.email }}</div>
                            {% if user.isverified == 1 %}
                                <div style="display:flex">
                                    <span class="material-icons" style="color:#D63F27">
                                        done
                                    </span>&nbsp; Email vérifié</div>
                            {% else %}
                                <div style="display:flex">
                                    <span class="material-icons" style="color:#D63F27">
                                        warning
                                    </span>&nbsp; Email non vérifié</div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body d-flex flex-column">
                            <div class="wrapper">
                                <h4 class="card-title mb-0">Autres informations</h4>
                                <div class="mb-4" id="net-profit-legend"></div>
                            </div>
                            Pays : {{ user.pays }} <br>
                            Age : {{ user.age }} <br>
                            Role : {% if user.roles[0] == 'ROLE_ADMIN' %} Administrateur {% else %} Utilisateur {% endif %} <br>
                            Randonnées éffectuées : ... <br>
                            Rang : ... <br>
                        </div> 
                    </div>
                </div>

            </div>
        </div>
    {% endblock %}
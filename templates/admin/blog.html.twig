{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <!-- Page Title Header Starts-->
            <div class="row page-title-header">
                <div class="col-12">
                    <div class="page-header">
                        <h4 class="page-title">Blog</h4>
                        <div class="quick-link-wrapper w-100 d-md-flex flex-md-wrap"></div>
                    </div>
                </div>
            </div>
            {% for message in app.flashes('warning') %}
    <div class="warningalert">
        {{ message }}
    </div><br>
{% endfor %}
            <div class="row">
                <div class="col-md-3 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body d-flex flex-column">
                            <div class="wrapper">
                                <h4 class="card-title mb-0">Catégories</h4>
                                <div class="mb-4" id="net-profit-legend"></div>
                            </div>
                            {{ form(catform) }}
                                <br>
                                {% if allcat != null %}
                                    <ul>
                                        {% for cat in allcat %}

                                            <li>{{ cat.name }}
                                                <a href="{{ path('delete_cat', { 'id': cat.id }) }}">
                                                    <span class="material-icons" style="font-size:15px">
                                                        highlight_off
                                                    </span>
                                                </a>
                                            </li>

                                        {% endfor %}
                                    </ul>
                                {% else %}
                                    Aucune catégorie
                                {% endif %}

                            </div>
                        </div>
                    </div>
                    <div class="col-md-9 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body d-flex flex-column">
                                <div class="wrapper">
                                    <h4 class="card-title mb-0">Les articles de blog</h4><br>
                                    <a href="{{ path('write_blog') }}">
                                                            <button type="button" class="btn btn-danger btn-fw">
                                                                Ajouter un article
                                                            </button>
                                                        </a>
                                    <div class="mb-4" id="net-profit-legend"></div>
                                </div>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                ID
                                            </th>
                                            <th>
                                                Titre
                                            </th>
                                            <th>
                                                État
                                            </th>
                                            <th>
                                                Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for blog in allblogs %}

                                            {% if blog.published == 0 %}
                                                <tr class="table-danger">
                                                    <td>
                                                        {{ blog.id }}
                                                    </td>
                                                    <td>
                                                        {{ blog.title }}
                                                    </td>
                                                    <td>
                                                        Brouillon
                                                    </td>
                                                    <td>
                                                        <a href="{{ path('delete_blog', { 'id': blog.id }) }}">
                                                            <button type="button" class="btn btn-danger btn-fw">
                                                                <span class="material-icons">
                                                                    delete_outline
                                                                </span>
                                                            </button>
                                                        </a>
                                                         <a href="{{ path('modif_blog', { 'id': blog.id }) }}">
                                                    <button type="button" class="btn btn-primary btn-fw">
                                                        <span class="material-icons">
                                                            edit
                                                        </span>
                                                    </button></a>
                                                     <a href="#">
                                                        <button type="button" class="btn btn-success btn-fw">
                                                        <span class="material-icons">
                                                            visibility
                                                        </span>
                                                        </button></a>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr class="table-success">
                                                    <td>
                                                        {{ blog.id }}
                                                    </td>
                                                    <td>
                                                        {{ blog.title }}
                                                    </td>
                                                    <td>
                                                        Publié
                                                    </td>
                                                    <td>
                                                        <a href="{{ path('delete_blog', { 'id': blog.id }) }}">
                                                            <button type="button" class="btn btn-danger btn-fw">
                                                                <span class="material-icons">
                                                                    delete_outline
                                                                </span>
                                                            </button>
                                                        </a>
                                                         <a href="{{ path('modif_blog', { 'id': blog.id }) }}">
                                                    <button type="button" class="btn btn-primary btn-fw">
                                                        <span class="material-icons">
                                                            edit
                                                        </span>
                                                    </button></a>
                                                     <a href="#">
                                                        <button type="button" class="btn btn-success btn-fw">
                                                        <span class="material-icons">
                                                            visibility
                                                        </span>
                                                        </button></a>
                                                    </td>
                                                </tr>
                                            {% endif %}

                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
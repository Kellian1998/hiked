{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <!-- Page Title Header Starts-->
            <div class="row page-title-header">
                <div class="col-12">
                    <div class="page-header">
                        <h4 class="page-title">Utilisateurs</h4>
                        <div class="quick-link-wrapper w-100 d-md-flex flex-md-wrap"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body d-flex flex-column">
                            <div class="wrapper">
                                <h4 class="card-title mb-0">Informations</h4>
                                <div class="mb-4" id="net-profit-legend"></div>
                            </div>
                            {% if user is defined %}
                                {% if user.pdp != '' %}
                                    <img
                                        src="{{ user.pdp }}"
                                        style="height:100px; width:100px; border-radius:100px; margin:0 auto;">
                                {% else %}
                                    <span
                                        class="img-sm rounded-circle text-white text-avatar"
                                        style="background-color:#D63F27; height:100px; width:100px; margin:0 auto;">{{ user.nom|first|upper}}{{ user.prenom|first|upper }}</span>
                                {% endif %}
                                <br>
                                <div style="display:flex; align-items: center; margin:0 auto;">
                                    {{ user.nom }}
                                    {{ user.prenom }}
                                    &nbsp;
                                </div><br><center>
                                <a href="{{ path('modif_user', { 'id': user.id }) }}">
                                                    <button type="button" class="btn btn-primary btn-fw">
                                                        <span class="material-icons">
                                                            edit
                                                        </span> Éditer
                                                    </button></a><br><br>
                                                    <a onclick="return(confirm('Etes-vous sûr de vouloir supprimer cette entrée?'))" href="{{ path('delete_user', { 'id': user.id }) }}">
                                                    <button type="button" class="btn btn-danger btn-fw">
                                                        <span class="material-icons">
                                                            delete_outline
                                                        </span>Supprimer
                                                        </button></a><br><br>
                                                         <a href="{{ path('infos_user', { 'id': user.id }) }}">
                                                        <button type="button" class="btn btn-success btn-fw">
                                                        <span class="material-icons">
                                                            visibility
                                                        </span>+ D'infos
                                                        </button></a><br><br>
                                                        </center>
                            {% else %}
                                Cliquez sur le bouton "Voir les informations" de l'utilisateur que vous
                                souhaitez pour afficher les informations.
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-md-8 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body d-flex flex-column">
                            <h4 class="card-title mb-0">Les utilisateurs</h4>
                            {% for user in users %}

                                <div class="d-flex mt-3 py-2 border-bottom">
                                    {% if user.pdp != '' %}
                                        <img class="img-sm rounded-circle" src="{{ user.pdp }}" alt="profile image">
                                    {% else %}
                                        <span
                                            class="img-sm rounded-circle text-white text-avatar"
                                            style="background-color:#D63F27">{{ user.nom|first|upper}}{{ user.prenom|first|upper }}</span>
                                    {% endif %}
                                    <div class="wrapper ml-2">
                                        <p class="mb-n1 font-weight-semibold">{{ user.nom }}
                                            {{ user.prenom }}
                                        </p>
                                        <small>{{ user.email }}</small>
                                    </div>
                                    <span class="ml-auto">
                                        <a href="{{ path('see_user', { 'id': user.id }) }}">
                                            <button type="button" class="btn btn-success btn-fw">
                                                Voir les actions
                                            </button>
                                        </a>
                                    </span>
                                </div>

                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}